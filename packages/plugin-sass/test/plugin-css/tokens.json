{
  "border": {
    "$type": "border",
    "std": {
      "$value": {
        "color": "#0d0300",
        "width": "1px",
        "style": "solid"
      },
      "$extensions": {
        "mode": {
          "light": {
            "color": "#0d0300",
            "width": "1px",
            "style": "solid"
          },
          "dark": {
            "color": "#ffffff",
            "width": "1px",
            "style": "solid"
          }
        }
      }
    }
  },
  "color": {
    "red": {
      "$type": "color",
      "$value": "#ff0000"
    },
    "green": {
      "$type": "color",
      "$value": "#00ff00",
      "$extensions": {
        "mode": {
          "default": "00ff00",
          "light": "#6fdd8b",
          "dark": "#56d364"
        }
      }
    },
    "blue": {
      "$type": "color",
      "$value": "#00ff00"
    },
    "redgreenblue": {
      "$type": "color",
      "$value": "{color.red}",
      "$extensions": {
        "mode": {
          "red": "{color.red}",
          "blue": "{color.blue}",
          "green": "{color.green}"
        }
      }
    }
  },
  "gradient": {
    "g-b": {
      "$type": "gradient",
      "$value": [
        {"color": "#00ff00", "position": 0},
        {"color": "#0000ff", "position": 1}
      ]
    }
  },
  "typography": {
    "family": {
      "body": {"$type": "fontFamily", "$value": ["IBM Plex Sans", "-system-ui", "sans-serif"]},
      "heading": {"$type": "fontFamily", "$value": "Helvetica"}
    },
    "page-title": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": "48px",
        "fontWeight": 600,
        "lineHeight": 1.25,
        "letterSpacing": "0.125em"
      }
    },
    "subheading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": "18px",
        "fontWeight": 500,
        "lineHeight": 1.375,
        "letterSpacing": "0.25em",
        "textTransform": "uppercase"
      }
    },
    "callout": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "18px",
        "fontWeight": 300,
        "font-style": "italic",
        "lineHeight": 1.5
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    }
  },
  "shadow": {
    "$type": "shadow",
    "$value": {
      "offsetX": "0px",
      "offsetY": "4px",
      "blur": "8px",
      "spread": "0px",
      "color": "rgba(0, 0, 0, 0.1)"
    }
  },
  "transition": {
    "$type": "transition",
    "$value": {
      "timingFunction": [0.4, 0, 0.6, 1],
      "duration": "0"
    }
  }
}
