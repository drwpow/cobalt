<style>
  .logo {
    height: 3rem;
  }

  .logo-wrapper {
    align-items: flex-start;
    display: flex;
    gap: var(--tz-space-300);
    margin-block: var(--tz-space-700);
  }

  .tagline {
    font-size: var(--tz-typography-800-regular-font-size);
    font-weight: var(--tz-typography-800-regular-font-weight);
    letter-spacing: var(--tz-typography-800-regular-letter-spacing);
    line-height: 1;
    margin-top: 0;
    margin-bottom: var(--tz-space-500);
    text-wrap: balance;
  }

  .beta {
    background-color: var(--tz-color-base-gray-300);
    border: 1px solid var(--tz-surface-secondary-border);
    border-radius: var(--tz-radius-300);
    color: var(--tz-surface-secondary-text);
    display: inline-block;
    font-family: var(--tz-typography-family-mono);
    font-size: var(--tz-typography-200-regular-font-size);
    line-height: 1;
    padding: var(--tz-space-100);
  }

  .actions {
    display: flex;
    gap: var(--tz-space-300);
    margin-top: var(--tz-space-800);
  }

  main {
    margin-inline: auto;
    max-width: 100%;
    padding-inline: var(--tz-space-700);
    padding-block: var(--tz-space-800);
    width: 60rem;
  }

  p {
    font-size: var(--tz-typography-400-regular-font-size);
    font-weight: var(--tz-typography-400-regular-font-weight);
    letter-spacing: var(--tz-typography-400-regular-letter-spacing);
    line-height: 1.8;
    margin-block: var(--tz-space-600);
    max-width: 40rem;
  }

  footer {
    font-size: var(--tz-typography-200-regular-font-size);
    font-weight: var(--tz-typography-200-regular-font-weight);
    letter-spacing: var(--tz-typography-200-regular-letter-spacing);
    margin-top: 20vh;
    margin-inline: auto;
    max-width: 40rem;
    padding-inline: var(--tz-space-400);
    text-align: center;
  }
</style>
