{
  "name": "@cobalt-ui/core",
  "description": "Parser/validator for the Design Tokens Community Group (DTCG) standard.",
  "version": "1.9.0",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "design tokens community group",
    "design tokens format module",
    "dtcg",
    "cli",
    "w3c design tokens",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drwpow/cobalt-ui.git",
    "directory": "packages/core"
  },
  "homepage": "https://cobalt-ui.pages.dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts && pnpm run build:bundle && pnpm run build:license",
    "build:clean": "del dist",
    "build:ts": "tsc",
    "build:bundle": "esbuild --format=esm --bundle --minify dist/index.js --outfile=dist/index.min.js --sourcemap && cp dist/index.d.ts dist/index.min.d.ts",
    "build:license": "node ../../scripts/inject-license.js @cobalt-ui/core dist/index.js,dist/index.min.js",
    "dev": "pnpm run --parallel \"/^dev:.*/\"",
    "dev:ts": "tsc --watch",
    "test": "pnpm run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@cobalt-ui/utils": "^1.2.4",
    "@types/culori": "^2.1.0",
    "culori": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.27",
    "esbuild": "^0.19.12",
    "vitest": "^1.3.1"
  }
}
