{
  "name": "@terrazzo/cli",
  "version": "0.0.16",
  "description": "CLI for managing design tokens using the Design Tokens Community Group (DTCG) standard and generating code for any platform via plugins.",
  "type": "module",
  "author": {
    "name": "Drew Powers",
    "email": "drew@pow.rs"
  },
  "keywords": [
    "design tokens",
    "dtcg",
    "cli",
    "w3c",
    "design system",
    "typescript",
    "sass",
    "css",
    "style tokens",
    "style system"
  ],
  "main": "./dist/index.js",
  "homepage": "https://terrazzoapp.com/docs/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/terrazzoapp/terrazzo.git",
    "directory": "./packages/cli/"
  },
  "license": "MIT",
  "bin": {
    "tz": "bin/cli.js",
    "terrazzo": "bin/cli.js"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:ts",
    "build:clean": "del-cli dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json -w",
    "lint": "biome check .",
    "test": "pnpm --filter @terrazzo/cli run \"/^test:.*/\"",
    "test:js": "vitest run",
    "test:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@terrazzo/parser": "workspace:^",
    "@terrazzo/token-tools": "workspace:^",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "merge-anything": "^5.1.7",
    "picocolors": "^1.0.1",
    "yaml-to-momoa": "^0.0.1",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  }
}
