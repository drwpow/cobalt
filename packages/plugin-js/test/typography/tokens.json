{
  "typography": {
    "family": {
      "body": {"$type": "fontFamily", "$value": ["IBM Plex Sans", "-system-ui", "sans-serif"]},
      "heading": {"$type": "fontFamily", "$value": "Helvetica"}
    },
    "page-title": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": "48px",
        "fontWeight": 600,
        "lineHeight": 1.25,
        "letterSpacing": "0.125em"
      }
    },
    "subheading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": "18px",
        "fontWeight": 500,
        "lineHeight": 1.375,
        "letterSpacing": "0.25em",
        "textTransform": "uppercase"
      }
    },
    "callout": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "18px",
        "fontWeight": 300,
        "font-style": "italic",
        "lineHeight": 1.5
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": "16px",
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    }
  }
}
