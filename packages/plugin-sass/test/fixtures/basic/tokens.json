{
  "border": {
    "$type": "border",
    "std": {
      "$value": {
        "color": "#0d0300",
        "width": { "value": 1, "unit": "px" },
        "style": "solid"
      },
      "$extensions": {
        "mode": {
          "light": {
            "color": "#0d0300",
            "width": { "value": 1, "unit": "px" },
            "style": "solid"
          },
          "dark": {
            "color": "#ffffff",
            "width": { "value": 1, "unit": "px" },
            "style": "solid"
          }
        }
      }
    }
  },
  "color": {
    "red": {
      "$type": "color",
      "$value": "#ff0000"
    },
    "green": {
      "$type": "color",
      "$value": "#00ff00",
      "$extensions": {
        "mode": {
          "default": "00ff00",
          "light": "#6fdd8b",
          "dark": "#56d364"
        }
      }
    },
    "blue": {
      "$type": "color",
      "$value": "#00ff00"
    },
    "redgreenblue": {
      "$type": "color",
      "$value": "{color.red}",
      "$extensions": {
        "mode": {
          "red": "{color.red}",
          "blue": "{color.blue}",
          "green": "{color.green}"
        }
      }
    }
  },
  "gradient": {
    "g-b": {
      "$type": "gradient",
      "$value": [{ "color": "#00ff00", "position": 0 }, { "color": "#0000ff", "position": 1 }]
    }
  },
  "typography": {
    "family": {
      "body": { "$type": "fontFamily", "$value": ["IBM Plex Sans", "-system-ui", "sans-serif"] },
      "heading": { "$type": "fontFamily", "$value": "Helvetica" }
    },
    "page-title": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": { "value": 48, "unit": "px" },
        "fontWeight": 600,
        "lineHeight": 1.25,
        "letterSpacing": "0.125em"
      }
    },
    "subheading": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.heading}",
        "fontSize": { "value": 18, "unit": "px" },
        "fontWeight": 500,
        "lineHeight": 1.375,
        "letterSpacing": "0.25em",
        "textTransform": "uppercase"
      }
    },
    "callout": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": { "value": 18, "unit": "px" },
        "fontWeight": 300,
        "font-style": "italic",
        "lineHeight": 1.5
      }
    },
    "body": {
      "$type": "typography",
      "$value": {
        "fontFamily": "{typography.family.body}",
        "fontSize": { "value": 16, "unit": "px" },
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    }
  },
  "shadow": {
    "$type": "shadow",
    "$value": {
      "offsetX": { "value": 0, "unit": "px" },
      "offsetY": { "value": 4, "unit": "px" },
      "blur": { "value": 8, "unit": "px" },
      "spread": { "value": 0, "unit": "px" },
      "color": "rgba(0, 0, 0, 0.1)"
    }
  },
  "transition": {
    "$type": "transition",
    "$value": {
      "timingFunction": [0.4, 0, 0.6, 1],
      "duration": { "value": 0, "unit": "ms" }
    }
  }
}
