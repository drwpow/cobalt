{
  "control": {
    "$description": "Control element sizes",
    "default-size": { "$value": "{space.600}" },
    "small-size": { "$value": "{space.500}" }
  },
  "space": {
    "$type": "dimension",
    "000": { "$value": "0.125rem" },
    "100": { "$value": "0.25rem" },
    "200": { "$value": "0.5rem" },
    "300": { "$value": "0.75rem" },
    "400": { "$value": "1rem" },
    "500": { "$value": "1.5rem" },
    "600": { "$value": "2rem" },
    "700": { "$value": "2.5rem" },
    "800": { "$value": "3rem" },
    "900": { "$value": "4rem" }
  }
}
